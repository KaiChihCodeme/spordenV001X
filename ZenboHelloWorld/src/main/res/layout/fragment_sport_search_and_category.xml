<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robot.asus.ZenboHelloWorld.SportSearchAndCategoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/input_search_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:completionHint="Select a sport"
            android:completionThreshold="1"
            android:hint="輸入運動名稱"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_sport_search_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜尋"
            android:textSize="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sport_category_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>


</FrameLayout>